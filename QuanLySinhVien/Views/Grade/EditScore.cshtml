@model QuanLySinhVien.Models.Student

@{
    ViewData["Title"] = "Edit Score";
}

<h2>Edit Score for @Model.GvDanhGia</h2>

<div>
    <form asp-action="EditScore" method="post">
        <input type="hidden" asp-for="MSSV" />
        <div class="form-group">
            <label asp-for="Reviews.FirstOrDefault().Score" class="control-label">New Score:</label>
            <input asp-for="Reviews.FirstOrDefault().Score" class="form-control" />
            <span asp-validation-for="Reviews.FirstOrDefault().Score" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
