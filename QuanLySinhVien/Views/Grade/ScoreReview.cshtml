@model IEnumerable<QuanLySinhVien.Models.Student>

@{
    ViewData["Title"] = "ScoreReview";
}

<h1>ScoreReview</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GvDanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher.NgayDanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reviews.FirstOrDefault().NoiDungDanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher.XepLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<QuanLySinhVien.Models.Student>())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GvDanhGia)
                </td>
                <td>
                    @if (item.Teacher != null)
                    {
                        @Html.DisplayFor(modelItem => item.Teacher.MSGV)
                    }
                    else
                    {
                        <text>No Teacher</text>
                    }
                </td>
                <td>
                    @if (item.Teacher != null)
                    {
                        @Html.DisplayFor(modelItem => item.Teacher.NgayDanhGia)
                        @Html.DisplayFor(modelItem => item.Teacher.Score)
                        @Html.DisplayFor(modelItem => item.Teacher.XepLoai)

                    }
                    else
                    {
                        <text>khong co ngay danh gia</text>
                        <text>No Score</text>
                        <text>khong co xep loai</text>
                    }
                </td>
                <td>
                    @if (item.Reviews.Any())
                    {
                        @Html.DisplayFor(modelItem => item.Reviews.First().NoiDungDanhGia)
                    }
                    else
                    {
                        <text>No Review</text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MSSV">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MSSV">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MSSV">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
