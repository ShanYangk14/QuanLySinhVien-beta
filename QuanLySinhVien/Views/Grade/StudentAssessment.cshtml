@model IEnumerable<QuanLySinhVien.Models.Teacher>

@{
    ViewData["Title"] = "StudentAssessment";
}

<h1>StudentAssessment</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GvDanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenSv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayDanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.XepLoai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<QuanLySinhVien.Models.Teacher>())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GvDanhGia)
                </td>
                <td>
                    @if (item.Students != null)
                    {
                        <div>
                            NoiDungDanhGia: @Html.DisplayFor(modelItem => item.Students.First().Reviews.First().NoiDungDanhGia)
                        </div>
                        <div>
                            Score: @Html.DisplayFor(modelItem => item.Students.First().Reviews.First().MaxScore)
                        </div>
                        <div>
                            Score: @Html.DisplayFor(modelItem => item.Students.First().Reviews.First().Score)
                        </div>
                        <div>
                            XepLoai: @Html.DisplayFor(modelItem => item.Students.First().Reviews.First().XepLoai)
                        </div>
                    }
                    else
                    {
                        <text>No Student</text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MSGV">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MSGV">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MSGV">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
