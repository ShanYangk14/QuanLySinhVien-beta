@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-start">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Welcome
            </div>
            <div class="card-body">
                @if (ViewBag.FullName != null)
                {
                    <p>Name: @ViewBag.FullName</p>
                    <p>Email: @ViewBag.Email</p>
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-warning">Logout</a>
                }
            </div>
        </div>
    </div>
</div>
