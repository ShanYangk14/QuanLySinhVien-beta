@{
    ViewData["Title"] = "Confirm Email";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.ConfirmationStatus == "Success")
{
    <p>Your email has been successfully confirmed. You can now log in using your credentials.</p>
}
else
{
    <p>Invalid token. Please check the confirmation link or request a new one.</p>
}

<a asp-action="Login" asp-controller="Home">Back to Login</a>
